
<!doctype html>
<html lang="en">
    <%- include("./partials/head.ejs", { styles: ["form.css"], title: "New message - Members Only" }) %>
    <body>
        <%- include("./partials/header.ejs") %>
        <main>
            <section class="form-container">
                <h1>Post new message</h1>
                <form action="/clubs/<%= clubTitle %>/new-message" method="POST" class="form">
                    <div>
                        <label for="title">Title *</label>
                        <input type="text" name="title" id="title" maxlength="16" autocomplete="off" autocapitalize="on" value="<%= locals.title %>" required>
                    </div>
                    <div>
                        <label for="message">Message *</label>
                        <textarea name="message" id="message" autocapitalize="on" required><%= locals.message %></textarea>
                    </div>
                    <%- include("./partials/formErrors.ejs") %>
                    <button type="submit" class="btn">Post</button>
                </form>
            </section>
        </main>
        <%- include("./partials/footer.ejs") %>
    </body>
</html>
