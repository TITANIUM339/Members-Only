<header>
    <div class="logo">
        <a href="/">Members <span>Only</span></a>
    </div>
    <nav>
        <ul>
            <% if (user) { %>
                <li class="nav-item">
                    <form action="/log-out" method="POST">
                        <button type="submit" class="btn">Log out</button>
                    </form>
                </li>
            <% } else { %>
                <li class="nav-item">
                    <a href="/log-in" class="btn">Log in</a>
                </li>
                <li class="nav-item">
                    <a href="/sign-up" class="btn">Sign up</a>
                </li>
            <% } %>
        </ul>
    </nav>
</header>
