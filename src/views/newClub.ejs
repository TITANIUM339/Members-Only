
<!doctype html>
<html lang="en">
    <%- include("./partials/head.ejs", { styles: ["form.css"], title: "New club - Members Only" }) %>
    <body>
        <%- include("./partials/header.ejs") %>
        <main>
            <section class="form-container">
                <h1>Create new club</h1>
                <form action="/clubs/new-club" method="POST" class="form">
                    <div>
                        <label for="title">Title *</label>
                        <input type="text" name="title" id="title" maxlength="16" autocomplete="off" autocapitalize="on" value="<%= locals.title %>" required>
                    </div>
                    <div>
                        <label for="description">Description</label>
                        <textarea name="description" id="description" autocapitalize="on"><%= locals.description %></textarea>
                    </div>
                    <div>
                        <label for="password">Club password *</label>
                        <input type="password" name="clubPassword" id="password" required>
                    </div>
                    <%- include("./partials/formErrors.ejs") %>
                    <button type="submit" class="btn">Create</button>
                </form>
            </section>
        </main>
        <%- include("./partials/footer.ejs") %>
    </body>
</html>
